{
  "name": "dukabook",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.js",
  "author": "DukaBook Team",
  "description": "Multi-tenant POS system for Kenyan small businesses",
  "scripts": {
    "dev": "vite",
    "build": "node build.cjs",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --config electron-builder.json",
    "electron:build:win": "npm run build && electron-builder --win --config electron-builder.json",
    "electron:build:mac": "npm run build && electron-builder --mac --config electron-builder.json",
    "electron:build:linux": "npm run build && electron-builder --linux --config electron-builder.json",
    "cap:init": "npx cap init DukaBook com.dukabook.app --web-dir=dist",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "android:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "build:all": "npm run build && echo 'Build complete! Run platform-specific builds next.'"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@ericblade/quagga2": "^1.11.0",
    "@supabase/supabase-js": "^2.87.1",
    "@types/leaflet": "^1.9.21",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^1.3.8",
    "express": "^5.2.1",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.556.0",
    "nodemailer": "^7.0.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-leaflet": "^5.0.0",
    "recharts": "^2.15.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vercel/node": "^5.5.15",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  }
}
